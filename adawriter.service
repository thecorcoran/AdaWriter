[Unit]
Description=AdaWriter E-Ink Distraction-Free Writer
After=network.target

[Service]
Environment="SDL_VIDEODRIVER=dummy"
Environment="GPIOZERO_PIN_FACTORY=rpigpio"
ExecStart=/home/admin/AdaWriter/venv/bin/python3 /home/admin/AdaWriter/ada_writer.py
WorkingDirectory=/home/admin/AdaWriter
StandardOutput=journal
StandardError=journal
Restart=always
User=admin

[Install]
WantedBy=multi-user.target